{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "no-console": "off",
        "import/no-extraneous-dependencies": "off",
        "no-param-reassign": "off",
        "vue/no-duplicate-attributes": "off",
        "indent": [2, "tab"],
        "no-tabs": 0,
        "quotes": [
            "error",
            "single"
        ]
    }
}


